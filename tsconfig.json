{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "sourceMap": true,
    "lib": [
      "ES2021.String",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
}
